Figura:
class Figura:
    def __init__ (self, area, perimetro):
        self.perimetro = perimetro
        self.area = area
    def get_perimetro (self):
        return perimetro
    def get_area (self):
        return area
    
class Triangulo:
    def __init__ (self, base, altura):
       self.base = base
       self.altura = altura
       self.lado = lado
    def get_area (self, base, altura):
        return (self.base * self.altura)/2
    def get_perimetro (self, lado):
        return self.lado * 3
        
    
class Cuadrado:
    def get_perimetro (self):
        return self.lado * 4
    def get_area (self):
        return self.base * self.altura
        

